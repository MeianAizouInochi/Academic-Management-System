                                        </Canvas>

                                    </Viewbox>

                                    <!--  Login Form Login Button Text  -->
                                    <TextBlock
                                        x:Name="LoginFormLoginButtonText"
                                        Grid.Column="1"
                                        VerticalAlignment="Center"
                                        FontSize="20"
                                        Foreground="White"
                                        Text="Let me in!" />

                                </Grid>

                            </Button>

                        </Border>

                    </Grid>


                </Grid>

            </Border>

        </Grid>

    </Border>

</UserControl>

<UserControl
    x:Class="AMS.Views.LoginView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:AMS.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="auto"
    Height="auto"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <!--
        Login View Starting.
    -->
    <!--  #822DC5  -->
    <Border
        Background="Transparent"
        CornerRadius="15"
        Opacity="1">

        <!--  Grid Containing the Center Login Form.  -->
        <Grid
            x:Name="LoginViewGrid_Lvl0"
            Width="auto"
            Height="auto"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">

            <Border
                Padding="20"
                Background="#0D084D"
                BorderBrush="Red"
                BorderThickness="0"
                CornerRadius="20"
                Opacity="1">

                <!--  Grid containing the elements of the form  -->
                <Grid x:Name="LoginViewGrid_Lvl1" Margin="10,0,10,0">

                    <Grid.RowDefinitions>

                        <RowDefinition Height="auto" />

                        <RowDefinition Height="auto" />

                        <RowDefinition Height="auto" />

                        <RowDefinition Height="auto" />

                    </Grid.RowDefinitions>

                    <!--  Login Form Title  -->
                    <Label
                        x:Name="LoginFormTitle"
                        Grid.Row="0"
                        Margin="0,0,0,15"
                        HorizontalAlignment="Center"
                        Content="Who are you?"
                        FontSize="25"
                        Foreground="White"
                        Opacity="1" />

                    <!--  Grids containing the other row elements of the outer grid.  -->
                    <Grid
                        x:Name="LoginViewGrid_Lvl2_1"
                        Grid.Row="1"
                        Margin="0,0,0,15"
                        HorizontalAlignment="Center">

                        <Grid.ColumnDefinitions>

                            <ColumnDefinition Width="auto" />

                            <ColumnDefinition Width="auto" />

                        </Grid.ColumnDefinitions>

                        <!--  Login Form Username Field Title  -->
                        <Label
                            x:Name="LoginUsernameFieldTitle"
                            Grid.Column="0"
                            Content="USERNAME : "
                            FontSize="20"
                            Foreground="White" />

                        <Grid x:Name="LoginViewGrid_Lvl2_1_1" Grid.Column="1">

                            <Border Background="white" CornerRadius="5">

                                <!--  Login Form Username Field  -->
                                <TextBox
                                    x:Name="LoginFormUsernameField"
                                    Width="150"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    FontSize="15"
                                    Text="{Binding Username, Mode=TwoWay}" />

                            </Border>

                        </Grid>

                    </Grid>

                    <Grid
                        x:Name="LoginViewGrid_Lvl2_2"
                        Grid.Row="2"
                        Margin="0,0,0,15"
                        HorizontalAlignment="Center">

                        <Grid.ColumnDefinitions>

                            <ColumnDefinition Width="0.5*" />

                            <ColumnDefinition Width="0.5*" />

                        </Grid.ColumnDefinitions>

                        <!--  Login Form Password Field Title  -->
                        <Label
                            x:Name="LoginFormPasswordFieldTitle"
                            Grid.Column="0"
                            Content="PASSWORD : "
                            FontSize="20"
                            Foreground="White" />

                        <Grid x:Name="LoginViewGrid_Lvl2_1_2" Grid.Column="1">

                            <Border Background="white" CornerRadius="5">

                                <!--  Login Form Password Field  -->
                                <TextBox
                                    x:Name="LoginFormPasswordField"
                                    Width="150"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    FontSize="15" />

                            </Border>

                        </Grid>

                    </Grid>

                    <Grid
                        x:Name="LoginViewGrid_Lvl3"
                        Grid.Row="3"
                        Width="auto"
                        Height="50"
                        Margin="0,0,0,0"
                        HorizontalAlignment="Center">

                        <Border
                            Background="#2419A4"
                            BorderBrush="Red"
                            BorderThickness="0"
                            CornerRadius="10">

                            <!--  Login Form Login Button  -->
                            <Button
                                x:Name="LoginButton"
                                Background="Transparent"
                                BorderThickness="0"
                                Command="{Binding LoginCommand}">

                                <Grid x:Name="LoginViewGrid_Lvl3_0_1" Margin="10,5,10,5">

                                    <Grid.ColumnDefinitions>

                                        <ColumnDefinition Width="auto" />

                                        <ColumnDefinition Width="auto" />

                                    </Grid.ColumnDefinitions>


<Window
    x:Class="AMS.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:AMS"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:AMS.ViewModels"
    xmlns:views="clr-namespace:AMS.Views"
    Title="AMS"
    Width="937"
    Height="500"
    AllowsTransparency="True"
    Background="Transparent"
    Foreground="Transparent"
    ResizeMode="CanResizeWithGrip"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">

    <ContentControl Content="{Binding CurrentViewModel}">

        <ContentControl.Resources>

            <DataTemplate DataType="{x:Type viewmodels:LoginViewModel}">

                <views:LoginView />

            </DataTemplate>

            <DataTemplate DataType="{x:Type viewmodels:StudentViewModel}">

                <views:UserInterfaceView />

            </DataTemplate>

        </ContentControl.Resources>

    </ContentControl>


</Window>
